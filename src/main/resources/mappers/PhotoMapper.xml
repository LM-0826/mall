<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.kidsphoto.mall.dao.PhotoMapper">
    <resultMap id="photoMap" type="com.kidsphoto.mall.entity.ProductS">

        <result property="imgUrl" column="imgUrl"/>
        <result property="userId" column="userId"/>
        <collection property="list" ofType="com.kidsphoto.mall.entity.ps">
            <id property="id" column="id"/>
            <result property="price" column="price"/>
            <result property="productName" column="productName"/>
            <result property="school" column="school"/>
        </collection>
    </resultMap>

    <select id="findByType" resultMap="photoMap">
        SELECT tp.img_url imgUrl,tp.user_id userId,pr.id id,pr.price price,pr.product_name productName,pr.school school FROM t_photo tp LEFT JOIN t_product_standard pr ON tp.type_id = pr.photo_type WHERE tp.type_id = #{typeId} AND pr.product_id = #{productId} AND tp.user_id = #{userId}
    </select>



</mapper>