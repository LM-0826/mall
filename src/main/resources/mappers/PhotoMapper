<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kidsphoto.mall.dao.PhotoMaaper">
    <resultMap id="photoMap" type="com.kidsphoto.mall.entity.Photo">
        <id property="id" column="id"/>
        <result property="imgUrl" column="img_url"/>
        <result property="userId" column="user_id"/>
        <collection property="products" ofType="com.kidsphoto.mall.entity.Product">
            <id property="id" column="prid"/>
            <result property="price" column="prprice"/>
            <result property="photoType" column="prphotoType"/>
        </collection>
    </resultMap>

    <select id="findByType" parameterType="Long" resultMap="photoMap">
        select * from t_photo tp left join t_product pr join on tp.type_id = pr.photo_type_id where tp.type_id = #{typeId} and pr.id = #{productId} and pr.usre_id = #{userId};
    </select>



</mapper>